{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": ["es2015", "dom"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5",
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "*.d.ts",
    "**/*.d.ts"
  ]
}